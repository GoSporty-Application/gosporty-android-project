<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    tools:layout_editor_absoluteX="-3dp"
    tools:layout_editor_absoluteY="-87dp">

    <ImageButton
        android:id="@+id/fProfileIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/vector_perfil"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="48dp" />

    <ImageButton
        android:id="@+id/fBookingsIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vector_lista"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="48dp" />

    <ImageButton
        android:id="@+id/fHomeIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fProfileIB"
        app:layout_constraintStart_toEndOf="@+id/fBookingsIB"
        app:srcCompat="@drawable/logo_circulo"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="48dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="318dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_balonfutbol2"
        tools:srcCompat="@drawable/bg_balonfutbol2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="416dp"
        android:layout_height="73dp"
        android:alpha="0.5"
        android:background="#838383"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/divider_horizontal_dark" />

    <TextView
        android:id="@+id/fSiteNameTV"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_button_yellow"
        android:text="Camp Nou"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/fSiteLogoIV"
        app:layout_constraintStart_toEndOf="@+id/fBackIB"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/fHeaderTV"
        android:layout_width="360dp"
        android:layout_height="59dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_button_yellow"
        android:text="Horario                Disponibilidad"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fInfoFieldTV" />

    <ScrollView
        android:id="@+id/fListScrollableSV"
        android:layout_width="362dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fHeaderTV">

        <LinearLayout
            android:id="@+id/fListVerticalLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_blue"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fListHorizontalLL1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/fHourTV1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="   16:00 - 17:00"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="257dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="497dp" />

                <ImageButton
                    android:id="@+id/fOpenIB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/blue"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/check"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="48dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fListHorizontalLL2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/fHourTV2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="   17:00 - 18:00"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="257dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="497dp" />

                <ImageButton
                    android:id="@+id/fBookedB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/blue"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/booked"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="48dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fListHorizontalLL3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/fHourTV3"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="   18:00 - 19:00"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="257dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="497dp" />

                <ImageButton
                    android:id="@+id/fBookedByOtherIB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/blue"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/booked_by_other"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="48dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/fInfoFieldTV"
        android:layout_width="359dp"
        android:layout_height="111dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/et_style"
        android:elevation="10dp"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:text="   Camp Nou canchas sintéticas"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fSiteNameTV"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/fSiteLogoIV"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:alpha="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_campnou"
        tools:srcCompat="@drawable/logo_campnou" />

    <ImageButton
        android:id="@+id/fBackIB"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_circular_button_green"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_circular_button_green"
        tools:srcCompat="@drawable/vector" />

    <TextView
        android:id="@+id/fIdFieldTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancha 3 - Futbol 7"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fSiteNameTV"
        app:layout_constraintEnd_toEndOf="@+id/fSiteNameTV"
        app:layout_constraintStart_toStartOf="@+id/fSiteNameTV" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:elevation="51dp"
        app:layout_constraintEnd_toEndOf="@+id/fInfoFieldTV"
        app:layout_constraintTop_toTopOf="@+id/fInfoFieldTV"
        app:srcCompat="@drawable/vector_estrella" />

    <TextView
        android:id="@+id/fAddressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:elevation="51dp"
        android:text="Carrera 54 # 25 - 17"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/fInfoFieldTV" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        android:elevation="51dp"
        android:text="Dirección: "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fInfoFieldTV"
        app:layout_constraintTop_toTopOf="@+id/fInfoFieldTV" />

    <TextView
        android:id="@+id/fDescriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:elevation="51dp"
        android:text="Cancha futbol 7"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/fInfoFieldTV"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/fGradeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="40dp"
        android:elevation="51dp"
        android:text="4,7"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fInfoFieldTV"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>