<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/search_bar"
                    android:elevation="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/textView"
                        android:layout_width="350dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:fontFamily="@font/montserrat"
                        android:hint="¿Dónde quieres jugar?"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_btn_f_v_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_edit_text"
                    android:layout_alignStart="@+id/layout_edit_text"
                    android:layout_alignEnd="@+id/layout_edit_text"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_football_principal"
                        android:contentDescription="football" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_voleyball_principal"
                        android:contentDescription="voleyball" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_basketball_principal"
                        android:contentDescription="basketball" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_btn_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_btn_f_v_b"
                    android:layout_alignStart="@+id/layout_edit_text"
                    android:layout_alignEnd="@+id/layout_edit_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:elevation="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_green"
                        android:fontFamily="@font/montserrat"
                        android:text="MAPA COMPLETO"
                        android:textColor="#F2F2F2"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_btn_map"
                    android:layout_alignStart="@+id/layout_edit_text"
                    android:layout_alignEnd="@+id/layout_edit_text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/search_bar"
                    android:elevation="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp">

                    <RelativeLayout
                        android:id="@+id/relative_layout_football"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/container_blue"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/camp_nou_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/camp_nou_sur_principal" />

                        <TextView
                            android:id="@+id/camp_nou_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/camp_nou_image"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="Camp Nou Sur"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/field_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/camp_nou_title"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="10dp"
                            android:text="Cancha Fútbol 7"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/field_title"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/container_white_transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/field_title"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="4dp"
                                android:text="15% Descuento"
                                android:textAlignment="textEnd"
                                android:textColor="#FFFFFF"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_voleyball"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@id/relative_layout_football"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/container_yellow"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/wembley_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/wembley_sport_21_principal" />

                        <TextView
                            android:id="@+id/wembley_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/wembley_image"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="Wembley Sport 21"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/field_voley_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/wembley_title"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@id/wembley_image"
                            android:text="Cancha Voleibol playa"
                            android:textAlignment="textEnd"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/field_voley_title"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/container_white_transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sale_voley"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/field_title"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="4dp"
                                android:text="20% Descuento"
                                android:textAlignment="textEnd"
                                android:textColor="#FFFFFF"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>