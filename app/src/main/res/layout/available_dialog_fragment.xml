<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/search_bar">

    <TextView
        android:id="@+id/no_available_txt"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:text="NO DISPONIBLE"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hModalBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/no_available_txt"
        android:layout_alignStart="@+id/no_available_txt"
        android:layout_alignEnd="@+id/no_available_txt"
        android:layout_marginStart="62dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/button_green"
        android:fontFamily="@font/montserrat"
        android:text="Aceptar"
        android:textColor="#F2F2F2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/no_available_txt"
        app:layout_constraintStart_toStartOf="@+id/no_available_txt"
        app:layout_constraintTop_toBottomOf="@+id/no_available_txt" />

</RelativeLayout>