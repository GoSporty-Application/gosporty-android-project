<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    tools:layout_editor_absoluteX="-3dp"
    tools:layout_editor_absoluteY="-87dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="318dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/soccer_field"
        tools:srcCompat="@drawable/soccer_field" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="416dp"
        android:layout_height="73dp"
        android:alpha="0.5"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/divider_horizontal_dark" />

    <TextView
        android:id="@+id/sSiteNameTV"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_button_yellow"
        android:text="Camp Nou"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/sSiteLogoIV"
        app:layout_constraintStart_toEndOf="@+id/sBackIB"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/sSiteInfoTV"
        android:layout_width="359dp"
        android:layout_height="111dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/et_style"
        android:elevation="10dp"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:text="   Camp Nou canchas sintéticas"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sSiteNameTV"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/sHeaderTV"
        android:layout_width="371dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_button_yellow"
        android:text="Nombre      Tamaño   Reserva"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sSiteInfoTV" />

    <ScrollView
        android:id="@+id/sListScrollableSV"
        android:layout_width="368dp"
        android:layout_height="104dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sHeaderTV">

        <LinearLayout
            android:id="@+id/sListVerticalLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_blue"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sListHorizontalLL1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/sNameTV1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text=" Fútbol 7 #1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="257dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="497dp" />

                <TextView
                    android:id="@+id/sFieldSizeTV1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="15 - 20"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="257dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="497dp" />

                <ImageButton
                    android:id="@+id/sGoToFieldIB1"
                    android:layout_width="66dp"
                    android:layout_height="50dp"
                    android:background="@drawable/blue"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/vector_go_to"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="48dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sListHorizontalLL2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/sNameTV2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text=" Fútbol 11 #2"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="257dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="497dp" />

                <TextView
                    android:id="@+id/sFieldSizeTV2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="22-30"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="257dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="497dp" />

                <ImageButton
                    android:id="@+id/sGoToFieldIB2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/blue"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/vector_go_to"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="48dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/sSiteLogoIV"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:alpha="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_campnou"
        tools:srcCompat="@drawable/logo_campnou" />

    <ImageButton
        android:id="@+id/sBackIB"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_circular_button_green"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_circular_button_green"
        tools:srcCompat="@drawable/vector" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:elevation="51dp"
        app:layout_constraintEnd_toEndOf="@+id/sSiteInfoTV"
        app:layout_constraintTop_toTopOf="@+id/sSiteInfoTV"
        app:srcCompat="@drawable/vector_estrella" />

    <TextView
        android:id="@+id/sAddressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:elevation="51dp"
        android:text="Carrera 54 # 25 - 17"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/sSiteInfoTV" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:elevation="51dp"
        android:text="Dirección: "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sSiteInfoTV"
        app:layout_constraintTop_toTopOf="@+id/sSiteInfoTV" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:elevation="51dp"
        android:text="Horario:"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sSiteInfoTV"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/sSiteScheduleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="15dp"
        android:elevation="51dp"
        android:text="07:00 - 23:59"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/sSiteInfoTV"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/sGradeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="40dp"
        android:elevation="51dp"
        android:text="4,7"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sSiteInfoTV"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

</androidx.constraintlayout.widget.ConstraintLayout>